<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Gallons</th>
    <th>Started</th>
    <th>Finished</th>
    <th># Pints Full</th>
    <th># Pints Left</th>
  </tr>
  </thead>
<%
  start_weight = Weight.new
  start_weight.raw = @keg.start_raw
  pints_full = start_weight.get_beer_count.to_s
%>
  <tbody>
    <tr>
      <td><%= @keg.name %></td>
      <td><%= @keg.volume %></td>
      <td><%= @keg.start_date %></td>
      <td><%= @keg.end_date %></td>
      <td><%= pints_full %></td>
      <td></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_keg_path(@keg) %> |
<%= link_to 'Back', kegs_path %>
