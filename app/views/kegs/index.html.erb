<h1>Listing kegs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gallons</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @kegs.each do |keg| %>
      <tr>
        <td><%= keg.name %></td>
        <td><%= keg.volume %></td>
        <td><%= link_to 'Show', keg %></td>
        <td><%= link_to 'Edit', edit_keg_path(keg) %></td>
        <td><%= link_to 'Destroy', keg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

